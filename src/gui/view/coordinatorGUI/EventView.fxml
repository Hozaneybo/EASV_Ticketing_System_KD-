               <font>
                  <Font name="Berlin Sans FB" size="17.0" />
               </font>
            </Label>
            <Button fx:id="updateBtn" layoutX="319.0" layoutY="250.0" mnemonicParsing="false" onAction="#updateEvent" prefHeight="32.0" prefWidth="105.0" style="-fx-background-radius: 25;" stylesheets="@../design.css" text="Update">
               <styleClass>
                  <String fx:value="my-button-style" />
                  <String fx:value="my-button-style" />
                  <String fx:value="my-fill-text" />
                  <String fx:value="body_background" />
               </styleClass>
            </Button>
            <Label fx:id="eventIdLabel" layoutX="505.0" layoutY="15.0" text="Label" />
