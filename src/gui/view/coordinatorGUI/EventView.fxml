            <Label fx:id="startTimeLbl" layoutX="402.0" layoutY="156.0" text=" date and time">
               <font>
                  <Font name="Berlin Sans FB" size="17.0" />
               </font>
            </Label>
            <Label layoutX="15.0" layoutY="202.0" text="Location    :">
               <font>
                  <Font name="Berlin Sans FB" size="17.0" />
